{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "plugins": ["react"],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["off", "windows"],
        "no-unused-vars": "off",
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": [
            "warn",
            {
              "allow": [
                "warn",
                "error"
              ]
            }
          ]
    }
}
